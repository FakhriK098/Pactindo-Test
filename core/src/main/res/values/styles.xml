<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextViewTitle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextViewPrice">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/grey_4D4D4D</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextViewCategory">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/grey_6B6B6B</item>
    </style>

    <style name="TextViewDescription">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Shimmer" parent="CardView.Light">
        <item name="cardBackgroundColor">@color/grey_616161</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">0dp</item>
    </style>
</resources>